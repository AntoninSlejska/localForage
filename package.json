    "@babel/preset-env": "^7.4.4",
    "@emotion/core": "^10.0.10",
    "@octopusthink/eslint-config": "^0.3.0",
    "@octopusthink/prettier-config": "^0.3.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "eslint": "^6.3.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-import": "^2.18.2",
